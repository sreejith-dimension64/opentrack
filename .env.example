# Face Recognition Service Configuration

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Face Recognition Settings
FACE_STORE_PATH=face_store.pkl
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216  # 16MB in bytes
DEFAULT_TOLERANCE=0.6

# Database Configuration (for migration scripts)
# PostgreSQL
# DB_TYPE=postgresql
